<UserControl x:Class="Addictor.SetAndRealSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Addictor"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="800" Height="22">
    <Grid>
        <ProgressBar Value="{Binding BarReal, Mode=TwoWay}"  />
        <Slider Value="{Binding BarSet, Mode=TwoWay}" Maximum="100" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
